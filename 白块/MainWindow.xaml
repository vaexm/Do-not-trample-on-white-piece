<Window x:Class="白块.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="570" Width="470" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" WindowStartupLocation="CenterScreen" >
        
    <Canvas x:Name="Canvas_Back" Height="570" Width="450" >
        <Border x:Name="border_back" Height="570" Width="450" CornerRadius="15" Opacity="0.6"></Border>
        <Border x:Name="border_back1" Height="35" Width="450" Background="Linen"  Canvas.Left="0" Canvas.Top="0">
            <Label Height="35" Width="100" Content="别踩白块" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" FontFamily="Aparajita" FontStretch="Expanded" FontStyle="Normal" FontSize="20"></Label>
        </Border>
        <Image Source="image/cancle.png" x:Name="img_cancle" Width="30" Height="100" Canvas.Top="-30" Canvas.Left="350" MouseLeftButtonDown="img_cancle_MouseLeftButtonDown" ></Image>
        <Image Source="image/close.png" x:Name="img_close" Width="30" Height="100" Canvas.Top="-30" Canvas.Left="400" MouseLeftButtonDown="img_close_MouseLeftButtonDown"></Image>
    </Canvas>
</Window>
